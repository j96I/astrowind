---
import { getPermalink } from '~/utils/permalinks';

import { BLOG } from '~/config.mjs';
import type { Post } from '~/types';

export interface Props {
  tags: Post['tags'];
  class?: string;
}

const { tags } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <ul>
      {tags.map((tag) => (
        <li class="bg-gray-100 dark:bg-slate-700 inline-block mr-2 mb-2 py-0.5 px-2 font-medium rounded-full">
          {BLOG?.tag?.disabled ? (
            tag
          ) : (
            <a href={getPermalink(tag, 'tag')} class="text-muted dark:bg-zinc-900 dark:text-white">
              {tag}
            </a>
          )}
        </li>
      ))}
    </ul>
  )
}
