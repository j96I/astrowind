---
import { parse } from 'node-html-parser';

export interface Props {
  header: string;
  rootClass?: string;
}

const { header, rootClass } = Astro.props;

const rawHtmlSlides = await Astro.slots.render('default');
const content = Array.from(parse(rawHtmlSlides).querySelectorAll('> *'));
---

<section class="flex justify-center mx-auto max-w-lg my-4">
  <div class="bg-black/[0.5] rounded-lg">
    <div class="py-4 px-8">
      {header && <h2 class=" text-xl font-bold font-heading text-white" set:html={header} />}
      <div class="w-full h-px dark:bg-slate-400 bg-slate-400 my-2"></div>
      {content.map((x) => <div class={`${rootClass} p-1`}>{x}</div>)}
    </div>
  </div>
</section>
