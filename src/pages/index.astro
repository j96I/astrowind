---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Steps from '~/components/widgets/Steps.astro';
import { Image } from '@astrojs/image/components';
import portrait from '~/assets/images/selfie.png';
import PostTags from '~/components/blog/Tags.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <div class={'flex content-center items-center flex-col flex-wrap'}>
    <Image src={portrait} alt="me" class={'rounded-full w-[10rem]'} />
    <span class="text-[2rem] dark:text-white">Jordan Ibrahim</span>
  </div>

  <div class={'flex content-center items-center flex-col flex-wrap mt-4 mb-10'}>
    <span class="hidden sm:inline"> Skillset</span>
    <PostTags tags={['C#', 'React', 'JavaScript', 'Typescript']} />
    <PostTags tags={['.NET Core v6', 'ASP.NET', 'SQL', 'Redux']} />
    <PostTags tags={['RESTful WebServices', 'Microservices', 'Docker', 'Jenkins']} />
    <PostTags tags={['Unit Testing', 'Test Development', 'Tailwind CSS', 'Gitlab']} />
  </div>

  <Steps
    title="Experience"
    items={[
      {
        title: 'Leidos Australia',
        description:
          'Software Engineer within the C4ISR division developing bespoke microservices and web applications using primarily C#, React, Typescript, SQL, Docker and Gitlab.',
        icon: 'tabler:package',
      },
      {
        title: 'Telstra',
        description:
          'Project technical specialist for the TPAMS PMO, a closed panel government contract providing telecommunication services. Ensuring smooth continuity across all aspects of Customer Service and Delivery.',
        icon: 'tabler:letter-case',
      },
      {
        title: 'BP',
        description: 'Console Operator',
        icon: 'tabler:paint',
      },
      {
        title: 'Try-Thai',
        description: 'Cashier',
        icon: 'tabler:paint',
      },
    ]}
  />
</Layout>
